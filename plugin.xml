<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            id="io.batenzar.jenkinstracker.preferences.JenkinsTrackerPreferencePage"
            name="JenkinsTracker Preferences"
            class="io.batenzar.jenkinstracker.preferences.JenkinsTrackerPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="io.batenzar.jenkinstracker.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            id="io.batenzar.jenkinstracker.properties.samplePropertyPage"
            name="JenkinsTracker Page"
            class="io.batenzar.jenkinstracker.properties.JenkinsTrackerPropertyPage"
            nameFilter="*.*">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="JenkinsTracker Category"
            id="io.batenzar.jenkinstracker">
      </category>
      <view
            id="io.batenzar.jenkinstracker.views.JenkinsTrackerView"
            name="JenkinsTracker View"
            icon="icons/sample.png"
            class="io.batenzar.jenkinstracker.views.JenkinsTrackerView"
            category="io.batenzar.jenkinstracker"
            inject="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="io.batenzar.views.JenkinsTrackerView"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               ratio="0.5">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
